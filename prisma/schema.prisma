generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id         String   @id @default(uuid())
  username   String   @unique
  password   String
  role       String
  created_at DateTime @default(now())
}

model kelas {
  id          String   @id @default(uuid())
  class_name  String
  description String
  schedule    String
  price       String
  class_items String[]
  created_at  DateTime @default(now())
}

model contact_information {
  id               String   @id @default(uuid())
  address          String
  phone            String
  email            String
  operational_time String[]
  created_at       DateTime @default(now())
}

model image {
  id              String   @id @default(uuid())
  image_public_id String
  url             String
  category        String
  description     String
  created_at      DateTime @default(now())
}

model coach {
  id              String   @id @default(uuid())
  name            String
  url             String
  image_public_id String
  experience      String
  specialization  String
  createdAt       DateTime @default(now())
}

model faq_category {
  id        String   @id @default(uuid())
  category  String
  createdAt DateTime @default(now())

  questions faq_question[]
}

model faq_question {
  id         String   @id @default(uuid())
  question   String
  answer     String
  categoryId String
  createdAt  DateTime @default(now())

  category faq_category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}
